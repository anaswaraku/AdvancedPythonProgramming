   "source": [
    "#create a decorator that increases the value of a function by 2\n",
    "def smartinc2(func):\n",
    "    def inner(a):\n",
    "        return a+2\n",
    "    return inner\n",
    "\n",
    "@smartinc2\n",
    "def number(a):\n",
    "    return a\n",
    "\n",
    "print(\"Value of a = \",a,\"\\nThe number is incremented by 2\\nNow a =\", number(5))\n"
   ]
